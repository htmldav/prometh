groups:
- name: AlDav
  rules:

  # Alert for any instance that is unreachable for >1 minutes.
  - alert: InstanceDown
    expr: up == 0
    for: 1m
    labels:
      severity: page
    annotations:
      summary: "AlDav Instance {{ $labels.instance }} down"
      description: "AlDav {{ $labels.instance }} of job {{ $labels.job }} has been down for more than 2 minutes."

  - alert: high_load
    expr: node_load1 > 0.5
    for: 2m
    labels:
      severity: page
    annotations:
      summary: "AlDav Instance {{ $labels.instance }} under high load"
      description: "AlDav {{ $labels.instance }} of job {{ $labels.job }} is under high load."
